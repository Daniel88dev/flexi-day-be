{
  "name": "flexi-day-be",
  "version": "0.1.0",
  "description": "",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/index.js",
    "dev": "npx tsc && node dist/index.js",
    "test": "vitest --run",
    "test:unit": "vitest --run --config vitest.config.ts",
    "test:e2e:check": "tsx src/tests/e2e/check-db.ts",
    "test:e2e": "npm run test:e2e:check && vitest --run --config vitest.e2e.config.ts",
    "test:e2e:watch": "npm run test:e2e:check && vitest --config vitest.e2e.config.ts",
    "test:e2e:ui": "npm run test:e2e:check && vitest --ui --config vitest.e2e.config.ts",
    "test:coverage": "vitest --run --coverage",
    "test:ui": "vitest --ui --coverage",
    "docker:e2e:build": "docker build -t flexi-day-be-e2e -f Dockerfile.e2e .",
    "docker:e2e:run": "docker compose -f docker-compose.e2e.yml up --build --abort-on-container-exit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "db:generate": "cross-env NODE_OPTIONS=\"--import tsx\" drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Daniel88dev/flexi-day-be.git"
  },
  "author": "Daniel Hrynusiw",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Daniel88dev/flexi-day-be/issues"
  },
  "homepage": "https://github.com/Daniel88dev/flexi-day-be#readme",
  "dependencies": {
    "better-auth": "^1.3.26",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "pg": "^8.16.3",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "drizzle-kit": "^0.31.5",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/cors": "^2.8.19",
    "@types/eslint-plugin-security": "^3.0.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.6.2",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cross-env": "^10.1.0",
    "eslint": "^9.37.0",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.4.0",
    "supertest": "^7.1.4",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0",
    "vitest": "^3.2.4"
  }
}
